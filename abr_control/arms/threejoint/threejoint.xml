<mujoco model="threejoint">

    <custom>
        <numeric name="START_ANGLES" data="0.0 0.0 0.0"/>
        <text name="google_id" data="None"/>
    </custom>

    <worldbody>
        <body name="hand" pos="0 0 0" mocap="true">
            <geom type="box" size=".02 .04 .06" rgba="0 .9 0 .5" contype="1" conaffinity="1"/>
        </body>
        <body name="target" pos="0 0 0" mocap="true">
            <geom type="sphere" size="0.05" rgba=".9 0 0 .5" contype="2" conaffinity="2"/>
        </body>
        <body name="path_planner" pos="0 0 0" mocap="true">
            <geom type="sphere" size="0.05" rgba="0 0 1 0.5" contype="4" conaffinity="4"/>
        </body>

        <body name="floor" pos="0 0 0" mocap="true">
            <geom type="box" size="1 1 0.001" rgba="0.99 0.99 0.99 1"/>
        </body>

        <light pos="0 1 1" dir="0 -1 -1" diffuse="1 1 1"/>

        <body name="base_link" pos="0 0 0.05">
            <geom name="link0" type="cylinder" pos="0 0 0" size="0.025 0.05" rgba="0 0 1 0.9"/>
            <inertial pos="0 0 0" mass="0" diaginertia="0 0 0" />

            <body name="link1" pos="0 0 0.06">
                <joint name='joint0' pos="0 0 0" axis="0 0 1"/>
                <inertial pos="0 0.1 0.025" mass="2" diaginertia="0.1 0.1 0.1" />
                <geom name="link1" type="cylinder" euler="90 0 0" pos="0 0.1 0.025" size="0.025 0.1" rgba="0 1 0 0.9"/>

                <body name="link2" pos="0 0.25 0">
                    <joint name='joint1' pos="0 0 0" axis="0 0 1"/>
                    <inertial pos="0 0.15 0.025" mass="2" diaginertia="0.1 0.1 0.1" />
                    <geom name="link2" type="cylinder" euler="90 0 0" pos="0 0.15 0.025" size="0.025 0.15" rgba="1 1 0 0.9"/>

                    <body name="link3" pos="0 0.35 0">
                        <joint name='joint2' pos="0 0 0" axis="0 0 1"/>
                        <inertial pos="0 0.175 0.025" mass="2" diaginertia="0.1 0.1 0.1" />
                        <geom name="link3" type="cylinder" euler="90 0 0" pos="0 0.175 0.025" size="0.025 0.175" rgba="1 0 1 0.9"/>

                        <body name="EE" pos="0 .35 0.025">
                            <inertial pos="0 0 0" mass="0" diaginertia="0 0 0" />
                        </body>
                    </body>

                </body>

            </body>

        </body>

    </worldbody>

    <actuator>
        <motor name="joint0_motor" joint="joint0"/>
        <motor name="joint1_motor" joint="joint1"/>
        <motor name="joint2_motor" joint="joint2"/>
    </actuator>

</mujoco>
